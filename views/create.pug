
extends ./layouts/common
block content
		h1.ml-5 Login

		if errors 
			each error in errors
				.alert.alert-danger= error

		form(action="/auth/create", method= "POST", enctype="multipart/form-data")
			.form-group.ml-5
				label(for="name") Name:
				input#name.form-control(name="name", type="text", placeholder="What is your name?" value= values ? values.name : '')
			.form-group.ml-5
				label(for="phone") Phone:
				input#phone.form-control(name="phone", type="number", placeholder= "Your phone" required minlength="10", maxlength="11" value= values ? values.phone : '')
			.form-group.ml-5
				label(for="email") Email:
				input#email.form-control(name="email", type="text" placeholder="...@gmail.com" value= values ? values.email : '')
			.form-group.ml-5
				label(for="password") Password:
				input#password.form-control(name="password", type="password" value= values ? values.password : '')
			.form-group.ml-10
			label(for="avatar").ml-5 Avatar
			input#avatar.form-control-file.ml-5(name="avatar", type="file" required)


			button.btn.btn-success.ml-5.mt-5 Create